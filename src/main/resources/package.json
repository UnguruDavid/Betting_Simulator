{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NewsMessage",
  "type": "object",
  "properties": {
    "event_type": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["event_type", "source", "title", "description", "timestamp"]
}
